class Solution(object):
    def characterReplacement(self, s, k):
        """
        :type s: str
        :type k: int
        :rtype: int
        """
        seen = {}
        maxf = 0
        l = 0
        ans = 0
        for r in range(len(s)):
            seen[s[r]] = seen.get(s[r], 0)  + 1
            maxf = max(maxf, seen[s[r]])

            while (r-l)+1 > maxf + k:
                seen[s[l]] -=1
                l +=1
            ans = max(ans, r-l+1)
        
        return ans
            
