class Solution(object):
    def isValidSudoku(self, board):
        """
        :type board: List[List[str]]
        :rtype: bool
        """
        rows = [dict() for _ in range(9)]
        cols = [dict() for _ in range(9)]
        boxes = [dict() for _ in range(9)]

        for i in range(9):
            for j in range(9):
                num = board[i][j]
                if num != ".":
                    box_index = (i // 3) * 3 + (j // 3)
                    if num in rows[i]:
                        return False
                    rows[i][num] = 1
                    if num in cols[j]:
                        return False
                    cols[j][num] = 1
                    if num in boxes[box_index]:
                        return False
                    boxes[box_index][num] = 1

        return True
