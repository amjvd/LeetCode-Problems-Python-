class Solution(object):
    def isPowerOfFour(self, n):
        """
        :type n: int
        :rtype: bool
        """
        if n <= 0:
            return False
        else:
            binary = bin(n)[2:]

        if len(binary) % 2 == 1:
            if binary[0] == "1":
                for x in range (1, len(binary)):
                    if binary[x] != "0":
                        return False
                return True
        else:
            return False

"""
can do without a loop by checking if power of 2 like previous exercise and that the only 1 bit is in odd position
"""
