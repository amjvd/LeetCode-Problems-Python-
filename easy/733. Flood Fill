class Solution(object):
    def floodFill(self, image, sr, sc, color):
        """
        :type image: List[List[int]]
        :type sr: int
        :type sc: int
        :type color: int
        :rtype: List[List[int]]
        """

        original = image[sr][sc]
        if original == color:
            return image

        def recur(x, y):
            if x < 0 or x >= len(image) or y < 0 or y >= len(image[0]):
                return
            if image[x][y] != original:
                return

            image[x][y] = color

            recur(x + 1, y)
            recur(x - 1, y)
            recur(x, y + 1)
            recur(x, y - 1)

        recur(sr, sc)
        return image
